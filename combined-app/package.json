{
  "name": "travel-diary-app",
  "version": "1.0.0",
  "description": "Full-stack Travel Diary Application",
  "main": "server.js",
  "type": "module",
  "engines": {
    "node": ">=18.18.0 <19.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd frontend && npm install --legacy-peer-deps && npm run build",
    "install-all": "npm install && cd frontend && npm install --legacy-peer-deps"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.12.1",
    "multer": "^1.4.5-lts.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.9"
  }
}